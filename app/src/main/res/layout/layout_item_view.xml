<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_data_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期："/>

    <TextView
        android:id="@+id/tv_date"
        app:layout_constraintLeft_toRightOf="@id/tv_data_1"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test" />

    <TextView
        android:id="@+id/tv_temp_1"
        app:layout_constraintTop_toBottomOf="@id/tv_data_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最高温度："/>

    <TextView
        android:id="@+id/tv_hign"
        app:layout_constraintTop_toBottomOf="@id/tv_data_1"
        app:layout_constraintLeft_toRightOf="@id/tv_temp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tv_low_1"
        app:layout_constraintTop_toBottomOf="@id/tv_temp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最低温度："/>

    <TextView

        android:id="@+id/tv_low"
        app:layout_constraintTop_toBottomOf="@id/tv_temp_1"
        app:layout_constraintLeft_toRightOf="@id/tv_low_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无"
        android:textColor="@color/colorPrimaryDark" />


</LinearLayout>